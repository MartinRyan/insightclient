.content {
  h4 {
    color: #333;
  }
  .merge_req {
    background-color: #ccc;
    padding: 0.5rem;
    &.ci_success {
      border-left: 0.5rem solid $success;
    }
    &.ci_pending {
      border-left: 0.5rem solid $warning;
    }
    &.ci_failed {
      border-left: 0.5rem solid $danger;
    }
  }
}

.merge-request-card {
  display: block;
  padding: 1rem;
  border: 1px solid #333;
  border-radius: 8px;
  margin-right: 1rem;
}

.more-button {
  position: absolute;
  top: 5px;
  right: 10px;
}

.merge-request-card-content {
  text-align: left;
}

.text-description {
  // display: block !important;
