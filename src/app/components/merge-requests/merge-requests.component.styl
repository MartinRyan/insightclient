.mat-h4 {
  color: #333;
  margin 0 0 0 1rem;
}

.mat-card-title {
  margin-left: 0;
}

.mat-card-header {
  margin-left: 0;
}

.merge-request-card {
  display: block;
  border: 1px solid #333;
  border-radius: 8px;
  margin-right: 1rem;
}

.more-button {
  position: absolute;
  top: 5px;
  right: 10px;
}

.merge-request-card-content {
  text-align: left;
}

.text-description {
  // display: block !important;
  text-overflow: ellipsis;
  overflow: hidden;
  // // white-space: nowrap;
  word-break: break-word;
}

.mat-icon.icon-orange {
  color: #f60;
}

.starcount {
  position: relative;
  left: 26px;
  bottom: 21px;
}

.starcount-holder {
  height: 1.4rem;
}

mat-card img {
  object-fit: cover;
  /*this makes the image in src fit to the size specified below*/
  width: 1.6rem;
  height: 1.6rem;
  padding-inline-start: .4rem;
  padding-inline-end: .4rem;
  vertical-align: middle;
  margin-bottom: .2rem;
}
