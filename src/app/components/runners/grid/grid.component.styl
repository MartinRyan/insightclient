/* Structure */
table {
  width: 100%;
}

.mat-form-field {
  font-size: 14px;
  width: 100%;
}

.mat-card-header-text {
  font-size: 1.4rem
  color: #aaa
  opacity: 0.9
  margin-top: 1em
  margin-left: 1em
}


.filterInput {
  margin-left: 1em;
  width: 170px;
}

::ng-deep .mat-form-field {
    .mat-input-element {
        color: slategray;
    }
    .mat-form-field-label {
        color: slategray;
    }
    .mat-form-field-underline {
        background-color: slategray;
    }
    .mat-form-field-ripple {
        background-color: slategray;
    }
    .mat-form-field-required-marker {
        color: slategray;
    }
}

::ng-deep .mat-form-field.mat-focused {
    .mat-form-field-label {
        color: #8254E6 ;
    }
    .mat-form-field-ripple {
        background-color: #8254E6;
    }
    .mat-form-field-required-marker {
        color: #8254E6;
    }
    .mat-input-element {
        color: #8254E6;
        margin-left: 1em;
    }
}